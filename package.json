{
  "name": "crypto-dashboard",
  "version": "1.0.0",
  "description": "webApp where you can see your crypto portfolio",
  "main": "babel-node app/server",
  "scripts": {
    "start": "babel-node app/server",
    "test:server": "jest --watch --testEnvironment=node --roots=test/server",
    "test:client": " cd app/client/ && yarn run test",
    "dev:server": "nodemon --exec babel-node ./app/server --watch ./app/server",
    "dev:client": "cd app/client && yarn start",
    "dev": "concurrently --kill-others-on-fail \"yarn dev:server\" \"yarn dev:client\"",
    "build": "cd app/client && yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/byverdu/crypto-dashboard.git"
  },
  "author": "Albert Vallverdu <@byverdu>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/byverdu/crypto-dashboard/issues"
  },
  "homepage": "https://github.com/byverdu/crypto-dashboard#readme",
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-eslint": "8.0.1",
    "babel-preset-env": "1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "6.26.0",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "eslint": "4.9.0",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-react": "^7.5.1",
    "jest": "^22.1.4",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.2"
  }
}
