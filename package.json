{
  "name": "crypto-dashboard",
  "version": "1.0.0",
  "description": "webApp where you can see your crypto portfolio",
  "main": "babel-node app/server",
  "scripts": {
    "postinstall": "echo '\\x1b[31m \"prestart\" npm script will only work on UNIX systems :( \\x1b[0m'",
    "prestart": "bash ./prestart.sh",
    "predeploy": "yarn && cd app/client && yarn",
    "start": "babel-node app/server",
    "test": "jest --coverage --testEnvironment=node --roots=app/server/__test__",
    "test:server": "jest --watch --testEnvironment=node --roots=app/server/__test__",
    "test:client": "cd app/client/ && yarn test",
    "dev:server": "nodemon --exec babel-node ./app/server --ignore 'data/*.json'",
    "dev:client": "cd app/client && yarn start",
    "dev": "concurrently --kill-others-on-fail \"yarn dev:server\" \"yarn dev:client\"",
    "build": "cd app/client && yarn build",
    "coverage": "jest --coverage && coverage-badger -r coverage/clover.xml -d ./"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/byverdu/crypto-dashboard.git"
  },
  "author": "Albert Vallverdu <@byverdu>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/byverdu/crypto-dashboard/issues"
  },
  "homepage": "https://github.com/byverdu/crypto-dashboard#readme",
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/src/setupTests.js",
      "!**/src/index.js",
      "!**/src/redux/index.js",
      "!**/src/redux/reducers/index.js",
      "!**/src/registerServiceWorker.js"
    ],
    "setupTestFrameworkScriptFile": "./app/client/src/setupTests.js"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-eslint": "8.0.1",
    "babel-preset-env": "1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "6.26.0",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "coverage-badger": "^1.0.1",
    "eslint": "4.9.0",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-react": "^7.5.1",
    "jest": "^22.1.4",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.2"
  }
}
