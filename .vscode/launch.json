{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch server",
      "program": "${workspaceFolder}/app/server/index.js",
      "outFiles": ["${workspaceFolder}/app/client"],
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/babel-node",
      "args": [
        "express-server"
      ]
    },
        {
          "name": "Debug CRA Tests",
          "type": "node",
          "request": "launch",
          "runtimeExecutable": "${workspaceRoot}/app/client/node_modules/.bin/react-scripts",      
          "args": [
            "test",
            "--runInBand",
            "--no-cache",
            "--env=jsdom"
          ],
          "cwd": "${workspaceRoot}/app/client",
          "protocol": "inspector",
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen"
        },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Client",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "args": [
        "-i",
        "--watch"
      ],
      "skipFiles": [
        "${workspaceRoot}/app/server/__test__/"
      ]
    },
    {
      "name": "Launch app",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:9000",
      "webRoot": "${workspaceRoot}/src"
    }
  ],
  "sourceMaps": true
}